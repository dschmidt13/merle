<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jdawg.merle.ColorGeneEditorController">
	<center>
		<VBox spacing="5.0" BorderPane.alignment="CENTER">
			<children>
				<HBox alignment="CENTER">
					<children>
						<Label contentDisplay="RIGHT" prefWidth="50.0" text="Name: " />
						<TextField fx:id="fieldName" />
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<Label contentDisplay="RIGHT" prefWidth="45.0" text="Red:" />
						<Slider fx:id="fieldRed" blockIncrement="1.0" max="255.0" />
                  <TextField fx:id="fieldRedText" prefWidth="50.0" />
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<Label contentDisplay="RIGHT" prefWidth="45.0" text="Green:" />
						<Slider fx:id="fieldGreen" blockIncrement="1.0" max="255.0" />
                  <TextField fx:id="fieldGreenText" prefWidth="50.0" />
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<Label contentDisplay="RIGHT" prefWidth="45.0" text="Blue:" />
						<Slider fx:id="fieldBlue" blockIncrement="1.0" max="255.0" />
                  <TextField fx:id="fieldBlueText" prefWidth="50.0" />
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<Label contentDisplay="RIGHT" prefWidth="45.0" text="Alpha:" />
						<Slider fx:id="fieldAlpha" blockIncrement="1.0" max="225.0" value="255.0" />
                  <TextField fx:id="fieldAlphaText" prefWidth="50.0" />
					</children>
				</HBox>
				<HBox alignment="CENTER">
					<children>
						<Canvas fx:id="fieldSample" height="20.0" width="225.0" />
					</children>
				</HBox>
				<VBox>
					<children>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
      						<Label text="Conversion Probability:" />
                        <TextField fx:id="fieldConversionProbabilityText" prefWidth="80.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
						<Slider fx:id="fieldConversionProbability" blockIncrement="1.0E-4" majorTickUnit="0.1" max="1.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" value="0.005" />
					</children>
				</VBox>
				<VBox>
					<children>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
      						<Label text="Cooling Rate:" />
                        <TextField fx:id="fieldCoolingRateText" prefWidth="80.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
						<Slider fx:id="fieldCoolingRate" blockIncrement="1.0E-4" majorTickUnit="0.1" max="1.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" value="0.001" />
					</children>
				</VBox>
				<VBox>
					<children>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
      						<Label text="Signal Strength:" />
                        <TextField fx:id="fieldSignalStrengthText" prefWidth="80.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
						<Slider fx:id="fieldSignalStrength" majorTickUnit="100.0" max="1000.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" value="50.0" />
					</children>
				</VBox>
				<HBox alignment="CENTER" spacing="25.0">
					<children>
						<Button defaultButton="true" mnemonicParsing="false" onAction="#acceptChanges" text="OK" />
						<Button cancelButton="true" mnemonicParsing="false" onAction="#rejectChanges" text="Cancel" />
					</children>
				</HBox>
			</children>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
		</VBox>
	</center>
</BorderPane>
